<%= render 'shared/navbar' %>


<div class="m-4 mt-4">
  <%= render 'shared/search' %>
</div>

<div class="m-4">
  <h1>Browse Robots</h1>
  <div class="row">
    <% @robots.each do |robot| %>
    <div class="col-sm-6 col-md-3">
      <%= link_to robot_path(robot) do %>
      <div class="card-trip my-4">
        <% if robot.photo.attached? %>
        <%= cl_image_tag robot.photo.key, height: 300, width: 400, crop: :fill, class: 'robot-img' %>
        <% else %>
        <img src="https://source.unsplash.com/1DjbGRDh7-E/1600x900" />
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2><%= robot.name %></h2>
            <p><%= robot.description %></p>
          </div>
          <h2 class="card-trip-pricing">Â£<%= robot.price_per_day %></h2>
          <img src="https://source.unsplash.com/tTdC88_6a_I/300x300" class="card-trip-user avatar-bordered" />
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
